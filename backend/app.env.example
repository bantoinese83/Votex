# Development Environment Configuration
ENVIRONMENT=development
PORT=8080

# Database Configuration
# PostgreSQL (primary) - will fallback to SQLite if not available
DB_URL=postgres://votex_user:votex_password@localhost:5432/vortexdb?sslmode=disable
DB_TYPE=postgres

# SQLite Configuration (fallback)
SQLITE_PATH=./data/votex.db

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@vortex.com
SMTP_TLS=true

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRY=24
APP_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_BURST=20

# Other Configuration
REDIS_URL=redis://localhost:6379
JWT_SECRET=dev-secret-key-change-in-production
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
